#include <bits/stdc++.h>
#define int long long
#define Mid ((l + r) >> 1)
#define lson (rt << 1)
#define rson (rt << 1 | 1)
using namespace std;
int read(){
	char c; int num, f = 1;
	while(c = getchar(),!isdigit(c)) if(c == '-') f = -1; num = c - '0';
	while(c = getchar(), isdigit(c)) num = num * 10 + c - '0';
	return f * num;
}
signed main()
{
	int n;
	n = read();
	if(n & 1) {
		printf("%lld\n", n / 2 - n);
	} else printf("%lld\n", n / 2);
	return 0;
}
